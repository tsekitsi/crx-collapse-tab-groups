{
  "manifest_version": 3,
  "name": "Collapse Tab Groups",
  "version": "1.0.0",
  "description": "Automatically collapse all tab groups except the active tab's group.",
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "permissions": [
    "tabs",
    "tabGroups",
    "storage"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}